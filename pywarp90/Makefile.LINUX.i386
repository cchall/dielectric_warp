ARCH = LINUX
MACHINE = LINUX
HOME = /home/dave
PYTHON = /usr
PYMAC = $(HOME)/pywrapper/pymac.py --f90 -t $(MACHINE)
PYCTOF = $(HOME)/pywrapper/pyctof.py
PACTLIB = -L/usr/local/pact/lib
XLIB = -L/usr/X11R6/lib
#YORICKLIB = -L/usr/local/yorick/lib/yorick/1.4/lib
YORICKLIB = -L/usr/local/lib/yorick/1.4/lib
TCLLIB = 
LAPACKLIB = 
OPT = -O
POPT = -O
PYMODULEOPT = -O1
FORT = pgf90 -Mextend -Mdclchk -fpic -r8
LD = pgf90 -shared
FORTLIB = 
DLLIB = -ldl
CC = cc -fpic
SO = so
NUMPYINCLUDE = -I/usr/include/python1.5/Numeric

WARPSCRIPTS = $(HOME)/scripts
INCLUDE = -I$(PYTHON)/include/python1.5
PYTHONLIB = -L$(PYTHON)/lib/python1.5/config -lpython1.5
PYTHONOBJ = $(PYTHON)/lib/python1.5/config/python.o
OTHERLIBS = $(PACTLIB) -lpdb -lpml -lscore \
            $(YORICKLIB) -lgist \
            $(LAPACKLIB) -llapack -lblas
#           $(TCLLIB) -ltcl8.0 -ltk8.0

SHAREDOBJECTS = envpy.$(SO) frzpy.$(SO) wxypy.$(SO) f3dpy.$(SO) fxypy.$(SO) \
                w3dpy.$(SO) toppy.$(SO) wrzpy.$(SO) cirpy.$(SO) herpy.$(SO) \
		pybasisC.$(SO)

WARPOBJECTS = env.o \
              frz.o \
              wxy.o \
              f3d.o \
              fxy.o \
              util.o \
              w3d.o \
              dtop.o \
              f3d_mgrid.o \
              dw3d.o \
              dwrz.o \
              fft.o \
              top.o \
              wrz.o \
              cir.o \
              her.o

MODULEOBJECTS = toppymodule.o envpymodule.o w3dpymodule.o f3dpymodule.o \
                wxypymodule.o fxypymodule.o cirpymodule.o herpymodule.o \
                top.p.o env.p.o w3d.p.o f3d.p.o wxy.p.o fxy.p.o \
		cir.p.o her.p.o pybasisC.o
MODULESOURCES = toppymodule.c envpymodule.c w3dpymodule.c f3dpymodule.c \
                wxypymodule.c fxypymodule.c cirpymodule.c herpymodule.c \
		pybasisC.c

warp: $(SHAREDOBJECTS)
	#cp *.$(SO) $(WARPSCRIPTS)
	#tar czf linuxpywarpso.tgz *.so
	#scp linuxpywarpso.tgz ife1:pub

static: $(MODULEOBJECTS) config.o
	cc -o pywarp $(PYTHONOBJ) $(WARPOBJECTS) $(MODULEOBJECTS) config.o \
	$(OTHERLIBS) -lm -lX11 $(PYTHONLIB)
config.o:config.c
	cc -Ae +z -c config.c $(INCLUDE)

pybasisC.$(SO):pybasisC.o 
	$(LD) -o pybasisC.$(SO) pybasisC.o $(INCLUDE) $(OTHERLIBS)
	#$(LD) -o pybasisC.$(SO) pybasisC.o $(FORTLIB)
pybasisC.o:pybasisC.c
	$(CC) -g -c pybasisC.c $(INCLUDE) $(NUMPYINCLUDE)
pybasisC.c:$(HOME)/pywrapper/pybasisC.m $(HOME)/pywrapper/pybasis.h
	cp $(HOME)/pywrapper/pybasisC.m $(HOME)/pywrapper/pybasis.h .
	$(PYCTOF) --f90 -t$(ARCH) pybasisC

toppy.$(SO):toppymodule.o top.p.o top.o dtop.o fft.o util.o
	$(LD) -o toppy.$(SO) toppymodule.o top.p.o top.o dtop.o fft.o util.o -lm $(XLIB) -lX11 $(INCLUDE) $(OTHERLIBS) $(DLLIB) $(FORTLIB)

top.p.o:top.p.f90
	$(FORT) $(POPT) -c top.p.f90
top.o:top.F
	$(FORT) $(OPT) -c top.F
dtop.o:dtop.F
	$(FORT) $(OPT) -c dtop.F
fft.o:fft.f
	$(FORT) $(OPT) -c fft.f
util.o:util.f
	$(FORT) $(OPT) -c util.f

toppymodule.o:toppymodule.c
	$(CC) $(PYMODULEOPT) -c toppymodule.c $(INCLUDE) $(NUMPYINCLUDE)
toppymodule.c top.p.f90:top.v
	$(PYMAC) -a top.v

envpy.$(SO):envpymodule.o env.p.o env.o
	$(LD) -o envpy.$(SO) envpymodule.o env.p.o env.o -lm $(XLIB) -lX11 $(INCLUDE) $(OTHERLIBS) $(DLLIB) $(FORTLIB)

env.p.o:env.p.f90
